include header.pug

div(class="wrap")
    div(class="content")
        header(class="site-header")
            include site_header.pug
        div(class="container")
            div(class="row")
                each c,idx in catDescription
                    div(class="col col-lg-12")
                        h2
                            a(href=`/cat?id=${c.id}`) #{c.category}
                    each val,idx in goods
                        if c.id == val.category
                            include card.pug
        include nav.pug
        include footer.pug
    script(src="/js/toCurrency.js")